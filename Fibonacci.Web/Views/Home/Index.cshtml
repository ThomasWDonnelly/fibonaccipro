@model Fibonacci.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Fibonacci Pro</h1>
    <p class="lead">Fibonacci Pro calculates Fibonacci numbers from a user's input and offers a variety of different output formats.</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { @class = "form-inline" }))
        {
            @Html.ValidationSummary(true)

            <div class="form-group">

                @Html.LabelFor(Model => Model.InputValue, new { @class = "sr-only" })

                @Html.TextBoxFor(Model => Model.InputValue, new { @class = "form-control", placeholder = "Input value" })

            </div>

            <button type="submit" class="btn btn-default">Get Results</button>
        }
    </div>
</div>
