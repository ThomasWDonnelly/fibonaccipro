@model Fibonacci.Web.Models.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Fibonacci Pro</h1>
    <p class="lead">Fibonacci Pro calculates Fibonacci numbers from a user's input and offers a variety of different output formats.</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-inline" }))
        {
            @Html.ValidationSummary(true)

            <div class="form-group">

                @Html.LabelFor(n => n.InputValue, new { @class = "sr-only" })

                @Html.TextBoxFor(n => n.InputValue, new { @class = "form-control", placeholder = "Input value" })

            </div>

            <button type="submit" class="btn btn-default">Get Results</button>
        }
    </div>
</div>
@if (Model.InputValue != "")
{

    <hr />
    <h1>Results for: @Model.InputValue</h1>
    <div class="row">
        <div class="col-md-12">
            <ol>
                @*@foreach (var result in Model.Results)
                {
                    //well this is frustrating..  Can't get System.Numerics to be recognized..
                    <li>@result</li>
                }*@
                <li>Result 1</li>
                <li>Result 2</li>
                <li>Result 3</li>
            </ol>
        </div>
    </div>
}
